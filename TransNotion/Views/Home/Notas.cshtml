@{
    ViewData["Title"] = "Notas";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-pink sidebar py-4">
            <h4 class="text-light">Categorias</h4>
            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link btn btn-light mb-2" href="#">Pessoal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-light mb-2" href="#">Trabalho</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-light mb-2" href="#">Projetos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-light mb-2" href="#">Outros</a>
                </li>
            </ul>
            <a href="#" class="btn btn-outline-light mt-4">Adicionar Categoria</a>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-9 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Minhas Notas</h1>
                <button class="btn btn-pink">Nova Nota</button>
            </div>

            <!-- Notes List -->
            <div class="row">
                <!-- Example Note Card -->
                <div class="col-md-6 mb-4">
                    <div class="card note-card">
                        <div class="card-body">
                            <h5 class="card-title">Título da Nota</h5>
                            <p class="card-text">Um breve resumo ou conteúdo da nota. Clique para ver mais detalhes.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="#" class="btn btn-outline-pink">Abrir Nota</a>
                                <span class="text-muted">12/08/2024</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Repeat Note Cards as needed -->
            </div>
        </div>
    </div>
</div>
