@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Card Tarefas -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    Tarefas
                </div>
                <div class="card-body">
                    <h5 class="card-title">Gerencie suas tarefas aqui</h5>
                    <p class="card-text">Mantenha suas tarefas organizadas e fáceis de acessar.</p>
                    <a href="#" class="btn btn-light btn-outline-pink">Ver Tarefas</a>
                </div>
            </div>
        </div>

        <!-- Card Calendário -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    Calendário
                </div>
                <div class="card-body">
                    <h5 class="card-title">Veja e gerencie seu calendário</h5>
                    <p class="card-text">Fique de olho nos seus compromissos e eventos importantes.</p>
                    <a href="#" class="btn btn-light btn-outline-pink">Ver Calendário</a>
                </div>
            </div>
        </div>

        <!-- Card Projetos -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    Projetos
                </div>
                <div class="card-body">
                    <h5 class="card-title">Gerencie seus projetos aqui</h5>
                    <p class="card-text">Organize e acompanhe o progresso dos seus projetos.</p>
                    <a href="#" class="btn btn-light btn-outline-pink">Ver Projetos</a>
                </div>
            </div>
        </div>

        <!-- Card Ideias -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    Ideias
                </div>
                <div class="card-body">
                    <h5 class="card-title">Adicione e visualize suas ideias</h5>
                    <p class="card-text">Capture e desenvolva suas ideias inovadoras.</p>
                    <a href="#" class="btn btn-light btn-outline-pink">Ver Ideias</a>
                </div>
            </div>
        </div>
    </div>
</div>
