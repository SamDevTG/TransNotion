<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TransNotion</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar">
            <div class="sidebar-header">
                TransNotion
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-page="/Index">
                        <i class="bi bi-house-door-fill"></i>
                        Início
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Tasks">
                        <i class="bi bi-check-circle-fill"></i>
                        Tarefas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Notes">
                        <i class="bi bi-file-earmark-text-fill"></i>
                        Notas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Projects">
                        <i class="bi bi-folder-fill"></i>
                        Projetos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Ideas">
                        <i class="bi bi-lightbulb-fill"></i>
                        Ideias
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Calendar">
                        <i class="bi bi-calendar-fill"></i>
                        Calendário
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Settings">
                        <i class="bi bi-gear-fill"></i>
                        Configurações
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Profile">
                        <i class="bi bi-person-circle"></i>
                        Perfil
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        Sair
                    </a>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <button id="menu-toggle" class="btn btn-primary">
                    <i class="bi bi-list"></i>
                </button>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer>
                <p>© 2023 TransNotion. Todos os direitos reservados.</p>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
